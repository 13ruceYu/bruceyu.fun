---
import type { CollectionEntry } from 'astro:content'

type Props = {
	entry: CollectionEntry<'projects'>
}

const { entry } = Astro.props
---

<a
	href={entry.data.repoURL}
	target="_blank"
	rel="noopener noreferrer"
	class="flex gap-2 rounded-md p-2 cursor-pointer hover:bg-black/5 dark:hover:bg-white/5 hover:text-black dark:hover:text-white transition-colors duration-300 ease-in-out"
>
	<img class="h-16" src={entry.data.logo} alt="logo" />
	<div>
		<div class="font-medium">{entry.data.title}</div>
		<div class="text-sm text-gray-400">{entry.data.description}</div>
	</div>
</a>
